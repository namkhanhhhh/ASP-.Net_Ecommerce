@model OnlineShop_ASP_MVC.ViewModels.RegisterVM 
@{
    ViewData["Title"] = "Register";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Register</h1>
        <form asp-action="Register" enctype="multipart/form-data">
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Id" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Id" class="form-control">
                            <span asp-validation-for="@Model.Id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.Password" class="form-control">
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.Name" class="form-label my-3"></label><sup>*</sup>
                    <input asp-for="@Model.Name" type="text" class="form-control">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-check my-3">
                    <input asp-for="@Model.Gender" class="form-check-input">
                    <label class="form-check-label" for="Gender">Male</label>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.Dob" class="form-label my-3"></label>
                    <input asp-for="@Model.Dob" class="form-control">
                    <span asp-validation-for="@Model.Dob" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.Address" class="form-label my-3"></label><sup>*</sup>
                    <input asp-for="@Model.Address" class="form-control">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.Phone" class="form-label my-3"></label><sup>*</sup>
                    <input asp-for="@Model.Phone" class="form-control">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.Email" class="form-label my-3"></label><sup>*</sup>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label for="Img" class="form-label my-3">Image</label>
                    <input type="file" name="Img" class="form-control">
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>